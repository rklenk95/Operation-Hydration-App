        android:inputType="numberDecimal"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="72dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
